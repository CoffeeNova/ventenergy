<UserControl x:Class="ventEnergy.Pages.Settings.General"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:LP="clr-namespace:ventEnergy.VEControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" >
    <Grid x:Name="MainGrid">
        <Grid x:Name="CheckBoxGrid">
            <LP:CheckBoxLP x:Name="StartLogoCHKB" Content="Убрать заставку при загрузке" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="13,18,0,0" IsMouseCapturedChanged="CheckBox_IsMouseCapturedChanged" IsChecked="False" />
        </Grid>
        <Button x:Name="okButton" Content="Применить"    HorizontalAlignment="Left" Margin="195,270,0,0" VerticalAlignment="Top" Width="105" Click="okButton_Click" IsEnabled="False"/>
        <Grid Height="64" Margin="0,206,0,30">
            <TextBlock x:Name="MsgLabel" Text="" FontSize="14" TextWrapping="Wrap" FontFamily="Arial" RenderTransformOrigin="0.47,6.099" Margin="0,10,0,7" />
        </Grid>
    </Grid>
</UserControl>
